<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/doc_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/doc_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_doc_icon" />

    <TextView
        android:id="@+id/doc_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="7dp"
        android:fontFamily="@font/font"
        android:text="name_document.pdf"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/doc_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/doc_icon"
        app:layout_constraintStart_toStartOf="@+id/doc_date"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/doc_date"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="27dp"
        android:fontFamily="@font/font"
        android:text="doc_date"
        android:textFontWeight="100"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/doc_icon"
        app:layout_constraintTop_toBottomOf="@+id/doc_title" />


</androidx.constraintlayout.widget.ConstraintLayout>